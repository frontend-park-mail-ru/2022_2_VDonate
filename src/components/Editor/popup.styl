@require '@style/const.styl'

.sub-popup
  &__glass
    position: sticky
    top: 25vh
    left: 0
    right: 0
    width: 36vw
    margin: auto
    margin-top: 30vh
    display: flex
    flex-direction: column;
    align-items: center;
    padding: 20px;
    gap: 24px;
    border-radius: 16px
  &__back
    position:fixed
    top:0
    left:0
    width: 100%
    height 100%
    background-color:rgba(0,0,0,0.35)
  &__text
    font-27()
    text-align: center
    color: color-font
  &__btn-container
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding: 0px;
    gap: 30px;