@require '@style/const.styl'
@require '@style/mixin.styl'

+b(editor)
  display: grid
  justify-items: center
  align-items: center
  +e(back)
    z-index: 2
    position:fixed
    top:0
    left:0
    width: 100%
    height 100%
    background-color:rgba(0,0,0,0.7)
    padding: 20px 
    overflow: overlay
    customScrollbar()
  +e(form)
    display: flex
    flex-direction: column
    align-items: stretch
    padding: 20px
    gap: 24px
    width: 40vw
    height: min-content
  +e(header)
    text-align: center
    margin: 0 20px
  +e(inputs)
    display: contents
  +e(form-buttons)
    display: flex
    flex-direction: row
    justify-content: space-between
  +e(close-btn)
    position: absolute
    right: 16px
    top: 21px
  +e(span)
    text-align: center

+b(row-inputs)
  display: flex
  flex-direction: row
  justify-content: space-between
  gap: 10px
  +e(input)
    flex-grow: 1

+b(choose-area)
  display: flex
  flex-direction: row
  justify-content: space-evenly
  align-items: center
  +e(btn)
    zoom: 2
  +e(vertical-border)
    height: 80px
    width: 3px
    border-radius: 10px

@media (max-width: mobile-size)
  +b(editor)
    +e(form)
     margin-top: 50px
     width: 80vw
  