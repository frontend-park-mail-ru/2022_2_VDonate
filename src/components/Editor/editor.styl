@require '@style/const.styl'
@require '@style/mixin.styl'

.editor
  display: grid
  justify-items: center
  align-items: center
  +e(back)
    z-index: 1
    position:fixed
    top:0
    left:0
    width: 100%
    height 100%
    background-color:rgba(0,0,0,0.7)
    padding: 20px 
    overflow: overlay
    &::-webkit-scrollbar
      width: 8px
      background: transparent
      &-thumb
        background: color-scrollbar
        border-radius: 10px
  +e(form)
    display: flex
    flex-direction: column
    align-items: stretch
    padding: 20px
    gap: 24px
    width: 50vw
    height: min-content
  +e(header)
    text-align: center
  +e(inputs)
    display: contents
  +e(form-buttons)
    display: flex
    flex-direction: row
    justify-content: space-between

+b(row-inputs)
  display: flex
  flex-direction: row
  justify-content: space-between
  gap: 10px
  +e(input)
    flex-grow: 1
  