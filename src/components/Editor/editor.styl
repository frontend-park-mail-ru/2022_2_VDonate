@require '@style/const.styl'

.editor
  display: flex
  justify-content: space-around
  align-items: center
  &__back
    z-index: 1;
    position:fixed
    top:0
    left:0
    width: 100%
    height 100%
    background-color:rgba(0,0,0,0.7)
  &__form
    position: relative
    display: flex
    flex-direction: column
    align-items: stretch
    padding: 20px
    gap: 24px
    width: 50vw
    height: min(min-content, 95vh)
    &:before
      content: ""
      position: absolute
      inset: 0
      z-index: -1
      background-color: rgba(70, 88, 255, 0.1)
