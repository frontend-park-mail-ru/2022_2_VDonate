      backdrop-filter: blur(20px)
      background-size: cover
      opacity: 0.6
      border-radius: 20px
  &__header
    font-27()
    text-align: center
    color: color-font-light
  &__btn-area
    display: flex
    flex-direction: row
    align-items: flex-start
    padding: 0px
    gap: 30px
    justify-content: space-evenly
