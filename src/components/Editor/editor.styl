@require '@style/const.styl'

.editor
  display: flex
  justify-content: space-around
  align-items: center
  &__back
    z-index: 1;
    position:fixed
    top:0
    left:0
    width: 100%
    height 100%
    background-color:rgba(0,0,0,0.35)
  &__form
    position: relative
    display: flex
    flex-direction: column
    align-items: stretch
    padding: 20px
    gap: 24px
    width: 50vw
    height: min-content
    background-color: color-content
    background-size: cover
    border: 2px solid color-secondary
    border-radius: 20px
  &__header
    font-27()
    text-align: center
    color: color-font
  &__btn-area
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: flex-start
    padding: 0px
    gap: 8px
    justify-content: space-evenly
  &__inputs
    display: contents
  
@media  (max-height: 740px), (max-width: 700px)
  .editor__form
    width: 100%
    overflow: auto
    height: 100%
    border-radius: 0px
