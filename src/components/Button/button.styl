      //   &:active
      //     &:before
      //       background: linear-gradient(0deg, rgba(255, 255, 255, 0.6) 0%, rgba(0, 0, 0, 0.6) 100%)
      &_outline
        background: none
        &:before 
          padding: 2px
          background:linear-gradient(180deg, rgba(255, 255, 255, 0.2) 0%, rgba(0, 0, 0, 0.2) 100%)
        &:hover
          &:before
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, rgba(0, 0, 0, 0.1) 100%)
        &:active
          &:before
            background: linear-gradient(180deg, rgba(44, 45, 46, 0.2) 0%, rgba(255, 255, 255, 0.2) 100%)
      &_fingers
        background-color: saddlebrown
        background-repeat: no-repeat
        background-size: cover
        min-height: 100%
        min-width: 100%
        &:before 
          padding: 2px
          box-shadow: inset 0px -4px 2px rgba(0, 0, 0, 0.05), inset 0px 4px 2px rgba(255, 255, 255, 0.25), inset 4px 4px 26px rgba(255, 255, 255, 0.25)
          filter: drop-shadow(0px 40px 80px rgba(0, 0, 0, 0.38))
          backdrop-filter: blur(40px)
        &:hover
          &:before
            background-blend-mode: soft-light;
            box-shadow: none
            backdrop-filter: blur(40px);
        &:active
          &:before
            background-blend-mode: soft-light;
            box-shadow: inset 0px -4px 2px rgba(255, 255, 255, 0.25), inset 4px 8px 4px rgba(100, 100, 100, 0.25), inset 4px 4px 26px rgba(0, 0, 0, 0.05);
            backdrop-filter: blur(40px);
  &__icon
    width: 20px
  &__input
    display: none