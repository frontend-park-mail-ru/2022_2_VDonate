@require '@style/const.styl'

.button
  position: relative
  box-sizing: border-box
  border: none
  border-radius: 10px
  cursor: pointer
  &__back
    min-width: max-content
    padding: 1vh 1vw
    &_style
      &_primary
        background: color-primary
        border: 2px solid color-secondary
        &:hover
          border: 2px solid color-primary
        &:active
          border: 2px solid color-secondary
      &_outline
        background: none
        border: 2px solid color-secondary
        &:hover
          border: 2px solid color-primary
        &:active
          border: 2px solid color-secondary
      &_fingers
        background-color: saddlebrown
        background-repeat: no-repeat
        background-size: cover
        min-height: 100%
        min-width: 100%
        &:before 
          padding: 2px
          box-shadow: inset 0px -4px 2px rgba(0, 0, 0, 0.05), inset 0px 4px 2px rgba(255, 255, 255, 0.25), inset 4px 4px 26px rgba(255, 255, 255, 0.25)
          filter: drop-shadow(0px 40px 80px rgba(0, 0, 0, 0.38))
          backdrop-filter: blur(40px)
        &:hover
          &:before
            background-blend-mode: soft-light;
            box-shadow: none
            backdrop-filter: blur(40px);
        &:active
          &:before
            background-blend-mode: soft-light;
            box-shadow: inset 0px -4px 2px rgba(255, 255, 255, 0.25), inset 4px 8px 4px rgba(100, 100, 100, 0.25), inset 4px 4px 26px rgba(0, 0, 0, 0.05);
            backdrop-filter: blur(40px);
  &__text
    font-21()
    color: color-font

