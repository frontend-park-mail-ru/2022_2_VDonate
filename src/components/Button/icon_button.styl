@require '@style/const.styl'

.icon-button
  display: inline-flex
  justify-content: center
  align-items: center
  box-sizing: border-box
  border: none
  border-radius: 50%
  position: relative
  cursor: pointer
  &__back
    height: 40px
    width: 40px   
    &:before 
      content: ""
      position: absolute
      inset: 0
      border-radius: 50%
      -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0)
      -webkit-mask-composite: xor
      background-color: saddlebrown
