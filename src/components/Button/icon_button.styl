    filter: drop-shadow(0px 40px 80px rgba(0, 0, 0, 0.38)) invert(25%) sepia(60%) hue-rotate(210deg) brightness(103%) contrast(104%)
    background-repeat: no-repeat
    background-size: cover
    &:before 
      padding: 2px
      background:linear-gradient(180deg, rgba(255, 255, 255, 0.6) 0%, rgba(0, 0, 0, 0.6) 100%)
