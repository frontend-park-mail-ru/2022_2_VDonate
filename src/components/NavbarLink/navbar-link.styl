@require '@style/const.styl'

.navbar-unit
  display: flex
  flex-direction: row
  align-items: center
  gap: 5px
  text-decoration: none
  flex-wrap: wrap
  &__navbar-unit
    width: 95%
    border-radius: 0px 10px 10px 0px;
    padding: 8px 0px 8px 10px;
    &_choosen
      background-color: color-background
      border: 2px solid color-primary
  &__icon
    width: 20px
    filter: invert(25%) sepia(70%) saturate(6557%) hue-rotate(323deg) brightness(97%) contrast(92%)
  &__context
    font-21()
    color: color-font

@media  (max-width: 700px)
  .navbar-unit
    &__navbar-unit
      padding: 0px
      width: 70px
    &__icon
      display: none