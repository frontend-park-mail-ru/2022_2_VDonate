@require '@style/const.styl'
@require '@style/mixin.styl'

+b(profile-info)
  position: fixed
  top: 0
  right: 0
  +e(back)
    height: 100vh
    width: 20vw
    max-width: 300px
    display: flex
    flex-direction: column
    align-items: stretch
    gap: 15px
    padding: 20px
    border-radius: 1rem 0px 0px 1rem
    &:before
      border-radius: 1rem 0px 0px 1rem
  +e(img)
    width: 70%
    align-self: center
  +e(username)
    text-align: center
  +e(info-area)
    flex-grow: 1
  +e(edit-btn)
    position: absolute
    top: 20px
    right: 20px

+b(mini-statistic)
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  align-items: flex-start
  gap: 15px
  border-right: 2px rgba(0, 16, 61, 0.06)
  +e(container)
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
      
@media  (max-width: mobile-size)
  +b(profile-info)
    position: relative
    top: auto
    right: auto
    +e(back)
      height: auto
      width: 100vw
      max-width: 100vw
      position: relative
      background: none
      border: none
      backdrop-filter: none
      gap: 14px
      padding: 0
      padding-top: 55px
      &:before
        display: none
    +e(img)
      width: 25vw
    +e(edit-btn)
      top: 70px