@require '@style/const.styl'

.right-navbar
  position: fixed
  top: -2px
  right: -2px
  &__back
    height: calc(100vh + 4px)
    width: 24vw
    max-width: 300px
    position: sticky
    right: 0
    border-radius: 0px
    display: flex
    flex-direction: column
    padding-right: 0px
    margin: auto
    margin-right: 0px
    align-items: center
    gap: 14px
  &__img
    width: 16vw
    max-width: 250px
    margin: 8px
  &__username
    font-27()
    color: color-font

.profile-info
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  align-items: center
  gap: 15px
  &__container
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  &__donaters
    font-21()
    color: color-donater
  &__subs
    font-21()
    color: color-author
  &__count
    font-16()
    color: color-font


@media  (max-width: 700px)
  .right-navbar
    position: relative
    top: auto
    right: auto
    margin-top: 50px
    &__back
      height: auto
      width: 100vw
      max-width: 100vw
      position: relative
      background: none
      border: none
      backdrop-filter: none
      gap: 14px
