@require '@style/const.styl'

.right-navbar
  position: fixed
  top: 0
  right: 0
  &__feed
    width: 20vw
    position: sticky
    top: 10px
    right: 0
    border-radius: 16px 0px 0px 16px
    display: flex
    flex-direction: column
    padding: 8px
    padding-right: 0px
    margin: auto
    margin-top: 16px
    margin-right: 0px
    align-items: flex-end
    gap: 10px
  &__profile
    height: 100vh
    // min-width: 200px
    width: 24vw
    max-width: 300px
    position: sticky
    right: 0
    border-radius: 16px 0px 0px 16px
    display: flex
    flex-direction: column
    padding-right: 0px
    margin: auto
    margin-right: 0px
    align-items: center
    gap: 14px
    &_img
      // min-width: 150px
      width: 16vw
      max-width: 250px
      margin: 8px
    &_username
      font-27()
      color: color-font-light
    &_info
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content: center
      align-items: center
      gap: 15px
      border-right: 2px rgba(0, 16, 61, 0.06)
      &_container
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
      &_donaters
        font-21()
        color: #FF9E00
      &_subs
        font-21()
        color: color-primary
      &_count
        font-16()
        color: color-font-light
      