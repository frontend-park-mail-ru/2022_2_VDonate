@require '@style/const.styl'

.right-navbar
  position: fixed
  top: 0
  right: 0
  &__back
    height: 100vh
    // min-width: 200px
    width: 24vw
    max-width: 300px
    position: sticky
    right: 0
    border-radius: 16px 0px 0px 16px
    display: flex
    flex-direction: column
    padding-right: 0px
    margin: auto
    margin-right: 0px
    align-items: center
    gap: 14px
  &__img
    // min-width: 150px
    width: 16vw
    max-width: 250px
    margin: 8px
  &__username
    font-27()
    color: color-font-light
  &__become-author
    position: fixed
    bottom: 20px

.profile-info
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  align-items: center
  gap: 15px
  border-right: 2px rgba(0, 16, 61, 0.06)
  &__container
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  &__donaters
    font-21()
    color: #FF9E00
  &__subs
    font-21()
    color: color-primary
  &__count
    font-16()
    color: color-font-light
      