@require '@style/const.styl'

.subscriptions-item
  display: flex
  flex-direction: row
  text-decoration: none
  align-items: center
  &__subscriptions-item
    padding: 5px
    &_with-border
      border-bottom: solid 1px color-primary
  &__img
    width: 50px
    height: 50px
  &__username
    font-16()
    color: color-font
    margin-left: 20px
  &__tier
    font-16()
    color: color-font
    margin-left: auto

@media  (max-width: 400px)
  .subscriptions-item
    &__username
      display: none
