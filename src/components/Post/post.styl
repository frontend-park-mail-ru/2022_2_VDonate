@require '@style/const.styl'

.post
  &__back
    padding: 30px
    position: relative
    &:before
      content: ""
      position: absolute
      inset: 0
      z-index: -1
      background-color: rgba(0, 16, 61, 0.30)
      box-shadow: 0px 40px 80px rgba(0, 0, 0, 0.2), inset 0px -4px 2px rgba(0, 0, 0, 0.2), inset 0px 4px 2px rgba(255, 255, 255, 0.12), inset 4px 4px 26px rgba(255, 255, 255, 0.12)
      backdrop-filter: blur(40px)
      background-size: cover
      opacity: 0.6
      border-radius: 20px
  &__header
    display: grid
    grid-template-areas: "avatar username edit"\
                          "avatar date edit"
    grid-template-columns: min-content 1fr min-content
    column-gap: 10px
  &__header-btn
    position: absolute
    right: 20px
  &__img
    width: 40px
  &__author-name
    grid-area: username
    align-self: end
    font-16()
    color: color-font-light
  &__date-created
    grid-area: date
    align-self: start
    font-9()
    color: color-font-light
  &__content
    padding: 8px
  &__reaction
    display: flex
    flex-direction: row
    gap: 8px
    padding: 8px
  &__author-avatar
    grid-area: avatar
  &__not-allowed
    font-21()
    color: color-font-secondary

.post-content
  display: flex
  flex-direction: column
  gap: 10px
  &__title
  &__text
    font-16()
    color: color-font-light
  &__image
    max-width: 30vw 