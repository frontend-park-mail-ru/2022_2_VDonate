@require '@style/const.styl'
@require '@style/mixin.styl'

+b(input-field)
  display: flex
  flex-direction: column
  gap: 5px
  cursor: pointer
  +m(with-textarea)
    flex-grow: 1
  +e(back)
    display: flex
    flex-direction: row
    gap: 5px
    padding: 5px
    +m(error)
      outline: 2px solid color-error
  +e(input)
    width: 100%
    border: none
    background: none
    outline: none
    flex: 1
    color: color-font-input
    &::placeholder
      color: color-font-placeholder
    +m(image)
      display: none
  +e(textarea)
    width: 100%
    flex-grow: 1
    color: color-font-input
    resize: vertical
    white-space: pre-wrap
    &::placeholder
      color: color-font-placeholder
  +e(icon)
    max-width: icon-size
    max-height: icon-size