@require '@style/const.styl'
@require '@style/mixin.styl'

+b(subscription-card)
  display: flex
  flex-direction: column
  align-items: center
  white-space: normal
  gap: 5px
  padding: 10px
  +e(back)
    width: 18vw
    max-width: 180px
  +e(img)
    width: 96px
  +e(title)
    display: flex
    justify-content: center
    align-items: center
    text-align: center
  +e(motivation)
    &_part
      max-height: 50px
      background: linear-gradient(180deg, rgba(255, 255, 255, 1) 70%, rgba(255, 255, 255, 0) 100%)
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent
  +e(more)
    color: color-primary-light-3
    cursor: pointer
    margin-top: -15px
  +e(btn-area)
    display: contents

+b(price)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  +e(count)
    font-16()
    color: color-font-light
  +e(period)
    font-12()
    color: color-font-secondary