@require '@style/const.styl'
@require '@style/mixin.styl'

+b(post-action)
  +e(back)
    display: flex
    gap: 5px
    padding: 5px 15px
    align-items: center
    +m(pressed)
      background: color-like
  +e(icon)
    width: 15px
    filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(298deg) brightness(102%) contrast(102%)
  +e(loading)
    &:after
      content: " "
      display: block
      width: 10px
      height: 10px
      border-radius: 50%
      border: 4px solid #fff
      border-color: #fff transparent #fff transparent
      animation: lds-dual-ring 1.2s linear infinite