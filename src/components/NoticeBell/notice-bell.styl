@require '@style/const.styl'
@require '@style/mixin.styl'

+b(notice-bell)
  display: flex
  align-items: center
  position: relative
  &:hover
    transform: scale(1.1)
  +e(icon)
    height: 24px
    filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(298deg) brightness(102%) contrast(102%)
  +e(new-notices)
    display: none
    height: 6px
    width: 6px
    position: absolute
    top: 8px
    right: 0px
    background: color-secondary
    border: 1px solid color-secondary
    border-radius: 50%
    +m(active)
      display: block
  +e(btn-area)
    display: none
    position: fixed
    flex-direction: column
    align-items: stretch
    padding: 10px
    gap: 10px
    bottom: 61px
    left: 0
    width: 20vw
    max-width: 300px

@media  (max-width: mobile-size)
  +b(notice-bell)
    &:hover
      & .notice-bell__btn-area
          bottom: auto
          left: auto
          top: 50px
          right: 3px
          width: 200px
    +e(new-notices)
      top: 0
    +e(icon)
      height: icon-size-mobile