      box-shadow: 0px 40px 80px rgba(0, 0, 0, 0.2), inset 0px -4px 2px rgba(0, 0, 0, 0.2), inset 0px 4px 2px rgba(255, 255, 255, 0.12), inset 4px 4px 26px rgba(255, 255, 255, 0.12)
      backdrop-filter: blur(20px)
      background-size: cover
      opacity: 0.6
      border-radius: 20px
  &__title
    font-36()
    color: color-font-light
  &__greeting
    font-21()
    color: color-font-light
  &__btn-area
    display: flex
    flex-direction: column
    align-items: stretch
    padding: 0px
    gap: 15px
  &__link
    font-16()
    color: color-font-light
    text-decoration: none
    align-self: center
    cursor: pointer
    &:hover
      text-decoration: underline
  &__inputs
  &__submit
    display: contents