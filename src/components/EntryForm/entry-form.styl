@require '@style/const.styl'

.signlog
  display: flex
  flex-direction: column
  justify-content: center
  align-items: stretch
  gap: 32px
  &__back
    padding: 30px
    position: relative
    &:before
      content: ""
      position: absolute
      inset: 0
      z-index: -1
      background-color: rgba(0, 0, 0, 0.4)
