@require '@style/const.styl'
@require '@style/mixin.styl'

bg-edge = 5px 10px 10px rgba(0, 0, 0, 0.2), inset 0px -4px 2px rgba(0, 0, 0, 0.2), inset 0px 4px 2px rgba(255, 255, 255, 0.12), inset 4px 4px 26px rgba(255, 255, 255, 0.12)

.bg
  +m(interaction)
    border-radius: 1rem
    position relative
    &:before
      content: ""
      position: absolute
      inset: 0
      z-index: -1
      mix-blend-mode: soft-light
      box-shadow: bg-edge
      border-radius: 1rem
      background: "url(%s)" % bg-image
      background-size: cover
  +m(input)
    background: color-bg-input
    border-radius: 0.5rem 
  +m(button)
    +m(primary)
      position: relative
      border-radius: 0.5rem
      background: linear-gradient(
                                  101.7deg, 
                                  rgba(255, 255, 255, 0.2) 0%, 
                                  rgba(255, 255, 255, 0.2) 21.5%, 
                                  rgba(255, 255, 255, 0.28) 21.51%, 
                                  rgba(255, 255, 255, 0) 45.14%
                                  ), 
                  radial-gradient(
                                  100% 144.66% at 0% 0%, 
                                  color-primary-gradient-1 0%, 
                                  color-primary-gradient-2 100%
                                  )
      box-shadow: 2.5px 5px 10px color-primary-shadow
      &:before
        content: ""
        position: absolute
        inset: 0
        border-radius: 0.5rem
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0)
        -webkit-mask-composite: xor
        padding: 1px
        background:linear-gradient(180deg, rgba(255, 255, 255, 0.2) 0%, rgba(0, 0, 0, 0.2) 100%)    
      &:hover
        box-shadow: none
      &:active
        box-shadow: inset 0px 0px 20px color-primary-dark-2
        &:before
          background: none
    +m(outline)
      position: relative
      border-radius: 0.5rem
      background: none
      border: 1px solid color-primary
      box-shadow: 2.5px 5px 10px color-primary-shadow
      &:before
        content: ""
        position: absolute
        inset: 0
        border-radius: 0.5rem
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0)
        -webkit-mask-composite: xor
        padding: 2px
        background:linear-gradient(180deg, rgba(255, 255, 255, 0.2) 0%, rgba(0, 0, 0, 0.2) 100%)    
      &:hover
        &:before
          background: linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, rgba(0, 0, 0, 0.1) 100%)
      &:active
        &:before
          background: linear-gradient(180deg, rgba(44, 45, 46, 0.2) 0%, rgba(255, 255, 255, 0.2) 100%)
    +m(icon)
      background: none
      &:hover
        transform: scale(1.1)
    +m(action)
      position: relative
      background: none
      border-radius: 20px
      border: none
      &:before
        content: ""
        position: absolute
        inset: 0
        border-radius: 20px
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0)
        -webkit-mask-composite: xor
        padding: 2px
        background:linear-gradient(180deg, rgba(255, 255, 255, 0.2) 0%, rgba(0, 0, 0, 0.2) 100%)
      &:hover
        &:before
          background: linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, rgba(0, 0, 0, 0.1) 100%)
      &:active
        &:before
          background: linear-gradient(180deg, rgba(44, 45, 46, 0.2) 0%, rgba(255, 255, 255, 0.2) 100%)
  +m(notice)
    position relative
    backdrop-filter: blur(20px)
    border-radius: 0.5rem
    &:before
      z-index: -1
      content: ""
      position: absolute
      inset: 0
      -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0)
      -webkit-mask-composite: xor
      border-radius: 0.5rem
      padding: 1px
      background:linear-gradient(180deg, rgba(255, 255, 255, 0.2) 0%, rgba(0, 0, 0, 0.2) 100%)
  +m(content)
    position: relative
    &:before
      content: ""
      position: absolute
      inset: 0
      z-index: -1
      background-color: color-bg-content
      box-shadow: bg-edge
      backdrop-filter: blur(20px)
      background-size: cover
      opacity: 0.6
      border-radius: 1rem
    