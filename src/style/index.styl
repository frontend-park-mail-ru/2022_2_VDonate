@require '@style/const.styl'
  
body
  // background: rgb(34,193,195)
  word-break: break-word
  background: linear-gradient(305deg, rgba(34,193,195,1) 0%, rgba(215,115,247,1) 54%, rgba(0,205,254,1) 100%)
  min-height: 100vh
  &::-webkit-scrollbar
        width: 14px
        height: 46px
        &-thumb
          background: #CBE0FD
          border-radius: 46px
          box-shadow: inset 2px 2px 2px hsla(0,0%,100%,.25),inset -2px -2px 2px rgba(0,0,0,.25)
        &-track 
          background: #cbe0fd63

body,html {
    margin: 0;
    padding: 0;
}

* {
    box-sizing: border-box;
}

h1
  font-weight: bold
  font-size: inherit

.btn-area 
  display: flex
  flex-direction: row
  align-items: flex-start
  gap: 15px
  justify-content: space-between
  flex-wrap: wrap
  &__btn
    flex-grow: 1

[contenteditable="true"]:active,
[contenteditable="true"]:focus{
  border:none;
  outline:none;
}

[contenteditable='true'] {
    caret-color: red;
}

@media only screen and (max-width: 699px)
  .v-donate 
    display: none
  .small-screen-notion 
    display: flex
    font-21()
    color: color-font-light
    padding: 20vw
    text-align: center

@media only screen and (min-width: 700px)
  .v-donate
    display: contents
  .small-screen-notion 
    display: none
