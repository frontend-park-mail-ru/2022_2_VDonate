body
  // background: rgb(34,193,195)
  background: linear-gradient(305deg, rgba(34,193,195,1) 0%, rgba(215,115,247,1) 54%, rgba(0,205,254,1) 100%)
  min-height: 100vh
  &::-webkit-scrollbar
        width: 14px
        height: 46px
        &-thumb
          background: #CBE0FD
          border-radius: 46px
          box-shadow: inset 2px 2px 2px hsla(0,0%,100%,.25),inset -2px -2px 2px rgba(0,0,0,.25)
        &-track 
          background: #cbe0fd63

body,html {
    margin: 0;
    padding: 0;
}
* {
    box-sizing: border-box;
}