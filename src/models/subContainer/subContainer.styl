@require '@style/const.styl'

.sub-container
  &__head
    font-27()
    text-align: center
    color: color-font-light
    &_btn
      margin-left: 22px
  &__container
    overflow-x: auto
    overflow-y: hidden
    white-space: nowrap
    margin-top: 8px
    width: calc(100vw - 640px)   
    &::-webkit-scrollbar
        width: 4px;
        height: 16px;
        &-thumb
          background: #CBE0FD
          border-radius: 16px;
          box-shadow: inset 2px 2px 2px hsla(0,0%,100%,.25),inset -2px -2px 2px rgba(0,0,0,.25);
        &-track 
          background: none
  &__card
    display: inline-block
    margin-left: 16px
    position: relative
    box-shadow: inset 0px -4px 2px rgba(0, 0, 0, 0.05), inset 0px 4px 2px rgba(255, 255, 255, 0.25), inset 4px 4px 26px rgba(255, 255, 255, 0.25)