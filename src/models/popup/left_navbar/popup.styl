@require '@style/const.styl'

.change-popup
  &__glass
    position: sticky
    top: 10vh
    left: 0
    right: 0
    width: 450px
    margin: auto
    margin-top: 20vh
  &__form
    display: flex
    flex-direction: column;
    align-items: center;
    padding: 20px;
    gap: 24px;
  &__author
    display: flex
    flex-direction: row
    align-items: flex-start
    gap: 30px
    &_checkbox
      // TODO норм стили написать
    &_text
      font-21()
      color: color-font-light
  &__back
    position:fixed
    top:0
    left:0
    width: 100%
    height 100%
    background-color:rgba(0,0,0,0.7)
    z-index: 10
  &__head
    font-27()
    text-align: center
    color: color-font-light
  &__input
    width: 400px
  &__btn-container
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding: 0px;
    gap: 30px;
