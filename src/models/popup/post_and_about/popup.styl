@require '@style/const.styl'

.popup
  &__glass
    position: sticky
    top: 10vh
    left: 0
    right: 0
    height: 60vh
    width: 60vw
    margin: auto
    margin-top: 20vh
    display: flex
    flex-direction: column;
    align-items: center;
    padding: 20px;
    gap: 24px;
  &__back
    position:fixed
    top:0
    left:0
    width: 100%
    height 100%
    background-color:rgba(0,0,0,0.7)
  &__head
    font-27()
    text-align: center
    color: color-font-light
  &__text
    &_back
      display: flex
      flex-direction: row
      gap: 5px
      padding: 10px
      width: 58vw
      max-width: 58vw
      height: 50vh
      max-height: 50vh
      background: linear-gradient(109.46deg, rgba(201, 201, 201, 0.8) 1.57%, rgba(196, 196, 196, 0.1) 100%), linear-gradient(108.87deg, rgba(255, 255, 255, 0.8) 0.66%, rgba(211, 211, 211, 0.1) 99.48%);
      opacity: 0.5
      backdrop-filter: blur(30px)
      border-radius: radius-min 
      position: relative
      box-sizing: border-box
    &_field
      width: 58vw
      max-width: 58vw
      height: 41vh
      max-height: 41vh
      border: none
      background: none
      outline: none
      flex: 1
      font-16()
      color: color-font-light
  &__btn-container
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding: 0px;
    gap: 30px;