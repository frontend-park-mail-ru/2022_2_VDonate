@require '@style/const.styl'

.search-page
    display: flex
    flex-direction: column
    align-items: center
    &__search-page
        margin-top: 16px
        margin-left: 35vw
        margin-right: 15vw
    &__search-form
        display: flex
        flex-direction: row
        align-items: flex-end
        gap: 12px
    &__input-field
        width: 40vw
    &__search-btn
        height: 50px
    &__glass
        width: calc(40vw + 118px)
        font-16()
        text-align: center
        color: color-font-light
        margin-top: 16px