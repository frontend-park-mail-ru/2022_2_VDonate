@require '@style/const.styl'
@require '@style/mixin.styl'

+b(feed-page)
  display: flex
  flex-direction: column
  align-items: center
  +e(back)
    margin-left: 20vw
    padding: 20px
    width: 60vw
  +e(content-area)
    max-width: 800px
    width: 60vw
  +e(search-btn)
    padding: 10px 20px
    height: min-content

@media  (max-width: mobile-size)
  +b(feed-page)
    +e(back)
      margin-left: 0
      margin-top: 65px
      padding: 0
      width: 95vw
    +e(content-area)
      width: 100%