@require '@style/const.styl'

.entry-page
  &__entry-page
    display: grid
    grid-template-areas: 'content-area form-area'
    grid-template-rows: 1fr
    grid-template-columns: repeat(2, 1fr)
    gap: 10px
    height: 100%
    min-height: 100vh
  &__content-area
    grid-area: content-area
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
  &__logo
    zoom: 2.5
  &__form-area
    grid-area: form-area
    display: flex
    flex-direction: column
    align-items: flex-start
    justify-content: center

@media  (max-width: 700px)
  .entry-page
    &__entry-page
      display: flex
      flex-direction: column
      align-items: center
      justify-content: center
    &__content-area
      display none

@media  (max-height: 700px)
  .entry-page
    &__entry-page
      background: color-content