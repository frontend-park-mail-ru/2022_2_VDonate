@require '@style/const.styl'
@require '@style/mixin.styl'

+b(profile-page)
  display: flex
  flex-direction: column
  align-items: center
  +e(content)
    max-width: 800px
    width: 60vw
    display: flex
    flex-direction: column
    align-items: stretch
    gap: 20px
    padding: 20px
  +e(header)
    text-align: center
  +e(subscriptions)
    display: flex
    flex-direction: column
    gap: 15px
    text-align: center
    padding: 15px
    width: 100%
    max-width: 600px
    align-self: center
  +e(empty)
    padding: 10px 15px
    display: flex
    align-items: center
    gap: 20px
  +e(empty-text)
    text-align: center
    width: 100%
  +e(search-btn)
    padding: 10px 20px
    height: min-content

@media  (max-width: mobile-size)
  +b(profile-page)
    +e(content)
      width: 100vw
    +e(subscriptions)
      width: 100%