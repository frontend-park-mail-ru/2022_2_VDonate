@require '@style/const.styl'

.navbar
  position: fixed
  top: 0
  left: 0
  &__back
    border-radius: 0px 1rem 1rem 0px
    height: 100vh
    width: 20vw
    max-width: 300px
    display: flex
    flex-direction: column
    gap: 10px
    padding: 10px
  &__subs-list
    flex-grow: 1
    overflow: auto
    &::-webkit-scrollbar
      width: 4px
      background: transparent
      &-thumb
        background: color-scrollbar
        border-radius: 10px

.botton-area
  &__profile
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
  &__popup
    flex-direction: column
    align-items: center
    gap: 8px
  &__popup-btn
    width: 100%
    min-width: auto

.navbar-hr
  background-color: rgba(#00103D, 0.10)
  border: none
  border-radius: 0px 5px 5px 0px
  height: 3px
  width: 90%
  margin: 0