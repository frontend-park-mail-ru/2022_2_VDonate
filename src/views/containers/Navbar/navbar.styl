@require '@style/const.styl'
@require '@style/mixin.styl'

navbar-indent = 20px

+b(navbar)
  position: fixed
  top: 0
  left: 0
  +e(back)
    border-radius: 0px radius-big radius-big 0px
    height: 100vh
    width: 20vw
    max-width: 300px
    display: flex
    flex-direction: column
    gap: 10px
    padding: 15px 10px 15px navbar-indent
    &:before
      border-radius: 0px radius-big radius-big 0px
  +e(link)
    padding: 5px 5px 5px navbar-indent
    margin-left: - navbar-indent
  +e(subs-list)
    flex-grow: 1
    overflow: auto
    customScrollbar()
  +e(botton-area)
    gap: 10px;
    display: flex;
    flex-direction: column;

+b(botton-area)
  +e(profile)
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
  +e(sub-menu-btn)
    min-width: auto

+b(sub-menu)
  +e(sub-menu)
    position: fixed
    bottom: 80px
    left: 0
    flex-direction: column
    align-items: stretch
    padding: 10px
    gap: 5px
    width: 20vw

+b(navbar-hr)
  border: none
  height: 3px
  margin: 0
  margin-left: - navbar-indent

@media  (max-width: mobile-size)
  +b(navbar)
    z-index: 10
    +e(back)
      border-radius: 0
      height: 50px
      width: calc(100vw + 4px)
      max-width: calc(100vw + 4px)
      display: flex
      flex-direction: row
      flex-wrap: nowrap
      align-items: stretch
      padding: navbar-indent 15px 10px 15px
      &:before
        border-radius: 0
    +e(logo)
      zoom: 0.8
      display: flex
      flex-wrap: nowrap
      word-break: normal
      margin-right: 6px
      align-self: flex-start
    +e(link)
      padding: navbar-indent 5px 10px 5px
      margin-left: 0
      margin-top: - navbar-indent
    +e(sub)
      padding: 0px
    +e(subs-list)
      flex-grow: 1
      overflow-y: hidden
      overflow-x: auto
      customScrollbar(1px, 1px)

  +b(botton-area)
    +e(profile-mini)
      display: none !important

  +b(sub-menu)
    +e(sub-menu)
      position: fixed
      bottom: auto
      left: auto
      top: 50px
      right: 0
      width: 110px
      
  +b(navbar-hr)
    display: none