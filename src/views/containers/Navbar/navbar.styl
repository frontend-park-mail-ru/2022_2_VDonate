@require '@style/const.styl'
@require '@style/mixin.styl'

+b(navbar)
  position: fixed
  top: 0
  left: 0
  +e(back)
    border-radius: 0px 1rem 1rem 0px
    height: 100vh
    width: 20vw
    max-width: 300px
    display: flex
    flex-direction: column
    gap: 10px
    padding: 10px
    padding-left: left-indent
  +e(link)
    padding-left: navbar-left-indent !important
    margin-left: - navbar-left-indent
  +e(subs-list)
    flex-grow: 1
    overflow: auto
    &::-webkit-scrollbar
      width: 4px
      background: transparent
      &-thumb
        background: color-scrollbar
        border-radius: 10px

+b(botton-area)
  +e(profile)
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
  +e(sub-menu)
    flex-direction: column
    align-items: stretch
    padding: 10px
    gap: 5px
  +e(sub-menu-btn)
    min-width: auto

+b(navbar-hr)
  background-color: rgba(#00103D, 0.10)
  border: none
  border-radius: 0px 5px 5px 0px
  height: 3px
  margin: 0
  margin-left: - navbar-left-indent