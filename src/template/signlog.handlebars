<form class="form" name="{{formName}}">
  <div class="form__back">
    <span class="form__text logo">ВДонате</span>
    <span class="form__text form__text_type_header">{{formTitle}}</span>
    <span id="error-msg" class="form__error-msg form__error-msg_disable">Неверно введены данные!</span>
    <div class="form__input">
      {{#each inputs}}
        <lable class="input">
          <span class="input__lable">{{title}}</span>
          <input class="input__input" type="{{type}}" name="{{name}}" placeholder="{{placeholder}}">
          <span class="input__error input__error_disable">Тут будет ошибка :)</span>
        </lable>
      {{/each}}
    </div>
    <input class="form__button form__text_type_main" type="submit" value="{{buttonTittle}}">
    {{#with orButton}}
      <span class="form__text form__text_type_sub">или</span>
      <a class="form__link" href="{{link}}" data-link>{{title}}</a>
    {{/with}}
  </div>
</form>