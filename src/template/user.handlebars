<div class="main">
  {{#with owner}}
    <div class="profile">
      <div class="profile__info_size_big">
        <img class="profile__image_size_big" src="{{avatar}}" alt="{{username}}">
        <span class="profile__text_type_header">{{username}}</span>
        <span class="profile__text_type_sub">{{tags}}</span>
      </div>
    </div>
  {{/with}}
  {{#if owner.isAuthor}}
    <div class="levels">
      {{#each levels}}
        <div class="level-block">
          <span class="level-block__text_type_main">{{levelName}}</span>
          <img class="level-block__image" src="{{image}}" alt="image">
          <span class="level-block__text_type_header">{{price}}</span>
          <span class="level-block__text_type_sub">{{priceDescribtion}}</span>
          <span class="level-block__button">Задонатить</span>
          <div class="level-description ">
            {{#each descriptions}}
              <span class="level-description__text">{{this}}</span>
            {{/each}}
          </div>
        </div>
      {{/each}}
    </div>
    <div class="content">
      {{#with owner}}
        <span class="content__title">Про {{username}}</span>
        <div class="post-block">
          {{#with about}}
            <img class="post-block__image" src="{{image}}" alt="description -image">
            <span class="post-block__text_type_main block__text_align_left">{{text}}</span>
          {{/with}}
        </div>
      {{/with}}
      <span class="content__title">Последние посты от {{owner.username}}</span>
      {{#each posts}}
        <div class="post-block">
          <img class="post-block__image" src="{{image}}" alt="description -image">
          <span class="post-block__text_type_main block__text_align_left">{{text}}</span>
          <div class="sub-block">
            <div class="button">
              <img class="button__image" src="../static/icon/like.svg" alt="like">
              <span class="button__text">{{likesCount}}</span>
            </div>
            <div class="button">
              <img class="button__image" src="../static/icon/comment.svg" alt="comment">
              <span class="button__text">{{commentsCount}}</span>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="content">
      {{#each subscriptions}}
        <div class="profile">
          <a class="profile__link" href="/users/{{id}}" data-link>
            <div class="profile__info_size_small">
              <img class="profile__image_size_very-small profile__image_circle" src="{{avatar}}" alt="{{username}}">
              <span class="profile__text_type_main">{{username}}</span>
            </div>
            <span class="profile__text_type_main profile__text_align-right">{{levelName}}</span>
          </a>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>